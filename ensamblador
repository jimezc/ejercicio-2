__CONFIG _CP_OFF & _WDT_OFF & _PWRTE_ON & _XT_OSC
    LIST P=16F84A
    #Include <P16F84A.INC>
    
	ORG 0
INICIO 
	BSF STATUS, RP0
	CLRF TRISB ;LAS LINEAS DEL PUERTO B SE CONFIGURAN COMO UNA SALIDA
	MOVLW 00011111 ;MOVEMOS AL REGISTRO 0 SIRVE PARA DEFINIR CUALES SON 
	;ENTRADAS Y CUALES SALIDAS 0 SALIDAS Y 1 ES ENTRADAS.
	MOVWF TRISA ;LAS LINEAS DEL PUERTO A SE CONFIGURAN COMO ENTRADAS
	BCF STATUS, RP0 ; NUEVAMENTE INICIAMOS EN EL BANCO 0
	
CARGA
	MOVF PORTA, w ; CARGA EL REGISTRO DE DATOS DEL PUERTO A EN W
	MOVWF portb ;EL CONTENIDO DE W SE DEPOSITA EN EL PUERTO B
	goto CARGA
	
	EDN
